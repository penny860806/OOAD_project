<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/putChess"
    android:layout_width="273dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    //choose chess menu

    <LinearLayout
        android:id="@+id/choose_chess"
        android:layout_width="273dp"
        android:layout_height="100dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/yellow">
                //auro

                <LinearLayout
                    android:id="@+id/auro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="58dp"
                        android:layout_height="59dp"
                        android:background="@drawable/auro"></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="10sp"
                        android:background="@android:color/black"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                //rock

                <LinearLayout
                    android:id="@+id/rock"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="58dp"
                        android:layout_height="59dp"
                        android:background="@drawable/rock"></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="10sp"
                        android:background="@android:color/black"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                //clip

                <LinearLayout
                    android:id="@+id/clip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="58dp"
                        android:layout_height="59dp"
                        android:background="@drawable/clip"></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="10sp"
                        android:background="@android:color/black"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                //horse

                <LinearLayout
                    android:id="@+id/horse"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="58dp"
                        android:layout_height="59dp"
                        android:background="@drawable/horse"></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="10sp"
                        android:background="@android:color/black"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                //herculus

                <LinearLayout
                    android:id="@+id/herculus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="58dp"
                        android:layout_height="59dp"
                        android:background="@drawable/hercules"></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="10sp"
                        android:background="@android:color/black"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                //rhin

                <LinearLayout
                    android:id="@+id/rhin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="58dp"
                        android:layout_height="59dp"
                        android:background="@drawable/rhinoceros"></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="10sp"
                        android:background="@android:color/black"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                //spy

                <LinearLayout
                    android:id="@+id/spy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="58dp"
                        android:layout_height="59dp"
                        android:background="@drawable/spy"></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="10sp"
                        android:background="@android:color/black"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                //tower

                <LinearLayout
                    android:id="@+id/tower"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="58dp"
                        android:layout_height="59dp"
                        android:background="@drawable/tower"></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="10sp"
                        android:background="@android:color/black"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>
    //left number

    <LinearLayout
        android:id="@+id/left_number"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/left_number"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="15"
            android:textSize="25sp" />

    </LinearLayout>
    //chess information for put chess

    <LinearLayout
        android:id="@+id/chess_menu"
        android:layout_width="273dp"
        android:layout_height="213dp"
        android:background="@color/light_green"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chess_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chess"
            android:textSize="30sp" />
        //chess information table

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/skillCost"
                    android:background="@android:color/holo_green_dark"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <TextView
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="85dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/holo_green_dark"
                    android:textColor="@android:color/white"
                    android:text="1"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/holo_green_dark"
                    android:textColor="@android:color/white"
                    android:text="@string/skillRange"
                    android:textSize="15sp" />

                <TextView
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="85dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/holo_green_dark"
                    android:textColor="@android:color/white"
                    android:text="1"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/holo_green_dark"
                    android:textColor="@android:color/white"
                    android:text="@string/moveRange"
                    android:textSize="15sp" />

                <TextView
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="85dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/holo_green_dark"
                    android:textColor="@android:color/white"
                    android:text="1"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        //chess information description
        <TextView
            android:id="@+id/chess_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="我有做一個滾動的效果，只要字夠多滾動效果就會出現。另外我剛剛有試過反斜線N會換行，所以這邊文字可以一堆(?)，\n\n現在這行開始在撐字數"
            android:textSize="18sp" />
    </LinearLayout>

    //timer for putting chess

    <LinearLayout
        android:id="@+id/put_timer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_purple"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>
